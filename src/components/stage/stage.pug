include /components/table-data/table-data

mixin stage(type = 'cabinet')
  .stage&attributes(attributes)
    .stage__body
      .stage__header
        h1.h1.content.stage__title
          if type === 'cabinet'
            | Этап кабинет
        +btn({ tag: 'a', content: 'Далее', icons: ['arrow-right'] }).stage__btn-next(href="")

      .stage__main
        if type === 'cabinet'
          .stage__params(class=`stage__params--${type}`)
            div 1
            div 1
            div 1
            div 1

          +table-data(type)
        block
