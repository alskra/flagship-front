mixin btn({ tag = 'button', content, icons = [] } = {})
  #{tag}.btn(
    type=tag === 'button' ? 'button' : null
    href=tag === 'a' ? '' : null
  )&attributes(attributes)
    if icons.length
      each icon in icons
        span.btn__icon-box: icon-svg.btn__icon(name=icon)
    if content
      span.btn__content!= content
    block
